---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Adam Lloyd</title>
  <link href="http://alloy-d.net/atom.xml" rel="self" />
  <link href="http://alloy-d.net/" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://alloy-d.net</id>
  <author>
    <name>Adam Lloyd</name>
    <email>adam@alloy-d.net</email>
  </author>
  {% for post in site.posts limit:10 %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="http://alloy-d.net{{ post.url }}" />
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <id>http://alloy-d.net{{ post.id }}</id>
    <content type="html">{{ post.content | xml_escape }}</content>
    <author>
      <name>Adam Lloyd</name>
      <uri>http://alloy-d.net/</uri>
    </author>
  </entry>
  {% endfor %}
</feed>
